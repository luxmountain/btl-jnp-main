{
  "name": "voting-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "source/client",
    "source/server"
  ],
  "packageManager": "yarn@4.10.3",
  "scripts": {
    "client": "yarn --cwd source/client dev",
    "server": "yarn --cwd source/server dev",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "build": "yarn --cwd source/client build",
    "start:client": "yarn --cwd source/client preview",
    "start:server": "yarn --cwd source/server start",
    "install:all": "yarn --cwd source/client install && yarn --cwd source/server install",
    "setup": "yarn install && yarn install:all",
    "coding": "yarn setup && yarn dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
